{
  "version": "1.0.0",
  "name": "explore-siargao",
  "private": true,
  "prisma": {
    "schema": "apps/api/src/prisma/schema.prisma"
  },
  "scripts": {
    "setup": "npm install && npm run build",
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "db:api": "docker build -f ./docker/Dockerfile.api -t jpmadrigal/es-api-dev .",
    "db:api:arm": "docker build -f ./docker/Dockerfile.api.arm -t jpmadrigal/es-api-dev-arm .",
    "dc:api": "docker compose -f ./docker/compose-api.yml up -d",
    "dc:api:arm": "docker compose -f ./docker/compose-api-arm.yml up -d",
    "dp:api": "docker image push jpmadrigal/es-api-dev:latest",
    "dp:api:arm": "docker image push jpmadrigal/es-api-dev-arm:latest",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "seed": "npx prisma db push --force-reset && npm run seed --workspace=api"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "prisma": "^5.8.1",
    "turbo": "^1.11.3"
  },
  "packageManager": "^npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "engineStrict": true
}
