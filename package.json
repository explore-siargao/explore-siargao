{
  "name": "explore-siargao",
  "private": true,
  "prisma": {
    "schema": "apps/api/src/prisma/schema.prisma"
  },
  "scripts": {
    "setup": "npm install && npm run build",
    "build": "turbo build",
    "build:api": "turbo build --filter=api --filter=@repo/constants",
    "dev": "turbo dev",
    "start": "turbo start",
    "start:api": "turbo start --filter=api",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "^npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "engineStrict": true
}
